<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <input name="enquesta" required="true"/>

    <on-start>
       <evaluate result="flowScope.bossaPreguntes" expression="new com.tecnocampus.domain.BossaPreguntes()"/>
    </on-start>

    <view-state id="showNotes" view="entradaPreguntesFlow/writeNotesFlow/showEnquesta" model="enquesta">
        <transition on="enterNote" to="createNote"/>
        <transition on="finishedNotes" to="finish"/>
        <transition on="cancel" to="cancel"/>
    </view-state>

    <view-state id="createNote" view="entradaPreguntesFlow/writeNotesFlow/noteForm" model="pregunta">
        <on-entry>
            <set name="flowScope.pregunta" value="new com.tecnocampus.domain.PreguntaNumerica()"/>
        </on-entry>
        <transition on="noteEntered" to="showNotes">
            <evaluate expression="bossaPreguntes.addPregunta(flowScope.pregunta)"/>
        </transition>
        <transition on="finishedNotes" to="finish"/>
    </view-state>

    <end-state id="finish">
        <output name="bossaPreguntes"/>
    </end-state>

    <end-state id="cancel"/>

    <global-transitions>
        <transition on="cancel" to="cancel"></transition>
    </global-transitions>

</flow>